<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient"
    android:padding="16dp"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:animateLayoutChanges="true">

        <!-- ðŸ”¹ Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_gradient"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/bg_avatar_circle_white"
                android:src="@drawable/baseline_person_24"
                android:contentDescription="Profile photo"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Welcome, Student"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgAvatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name: â€”"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/tvWelcome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgAvatar" />

            <TextView
                android:id="@+id/tvStudentClass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Class: â€”"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                app:layout_constraintTop_toBottomOf="@id/tvStudentName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgAvatar" />

            <TextView
                android:id="@+id/tvStudentBatch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Batch: â€”"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                app:layout_constraintTop_toBottomOf="@id/tvStudentClass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgAvatar"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ðŸ”¹ Dashboard Grid -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:useDefaultMargins="true"
            android:paddingBottom="8dp">


            <!-- Timetable -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTimetable"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_timetable">

                    <ImageView
                        android:src="@drawable/baseline_event_24"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Timetable"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Timetable"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Assignments -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAssignments"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_assignments">

                    <ImageView
                        android:src="@drawable/baseline_assignment_24"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Assignments"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Assignments"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Results -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardResults"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_results">

                    <ImageView
                        android:src="@drawable/baseline_bar_chart_24"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Results"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Results"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Attendance -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAttendance"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_attendance">

                    <ImageView
                        android:src="@drawable/baseline_check_circle_24"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Attendance"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Attendance"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Study Materials -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMaterials"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_materials">

                    <ImageView
                        android:src="@drawable/baseline_folder_24"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Study Materials"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Study Materials"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Announcements -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAnnouncements"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_announcements">

                    <ImageView
                        android:src="@drawable/baseline_campaign_24"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Announcements"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Announcements"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Settings -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSettings"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_settings">

                    <ImageView
                        android:src="@drawable/setting_foreground"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Settings"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Settings"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
</ScrollView>
