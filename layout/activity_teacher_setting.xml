<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvTitle"
        android:text="Teacher Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnResetTeacherData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset My Data"
        android:textColor="#FFFFFF"
        android:background="#D32F2F"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnChangeTeacherPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change My Password"
        android:textColor="#FFFFFF"
        android:background="#1976D2"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnCheckFirebaseConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Firebase Connection"
        android:textColor="#FFFFFF"
        android:background="#1976D2"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvFirebaseStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status will appear here"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000" />

</LinearLayout>
