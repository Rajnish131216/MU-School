<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient"
    android:padding="16dp"
    android:clipToPadding="false"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:animateLayoutChanges="true">

        <!-- ðŸ« Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š View Class Results"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center" />

        <!-- ðŸ”½ Class Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Class"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spClass"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:spinnerMode="dropdown" />

        <!-- ðŸ”½ Batch Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Batch"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spBatch"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:spinnerMode="dropdown" />

        <!-- ðŸ”½ Exam Type Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Exam Type"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spExamType"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:spinnerMode="dropdown" />

        <!-- ðŸ”˜ Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnLoadResults"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“‚ Load Results"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLoadAllResults"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“š Load All"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- ðŸ§¾ Generate PDF Button -->
        <Button
            android:id="@+id/btnGeneratePDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“„ Generate PDF Report"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp"
            android:elevation="4dp" />

        <!-- ðŸ“Š Generate Excel Button -->
        <Button
            android:id="@+id/btnGenerateExcel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Generate Excel Report"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp"
            android:elevation="4dp" />

        <!-- ðŸ§ Results Display Container -->
        <LinearLayout
            android:id="@+id/resultsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="none" />

        <!-- ðŸŒ€ Footer -->
        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MU School â€¢ Result Analytics"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="28dp"
            android:layout_gravity="center"
            android:alpha="0.8" />

    </LinearLayout>
</ScrollView>
