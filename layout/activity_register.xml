<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background (placeholder) -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:rotation="135"
        android:src="@android:drawable/screen_background_dark_transparent"
        android:contentDescription="@null"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="false"
        tools:ignore="ContentDescription"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1AFFFFFF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:text="ðŸŽ“ Register"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2E86C1"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- GR No. / Emp Code -->
            <EditText
                android:id="@+id/etUsername"
                android:hint="GR No. / Emp Code"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="14dp"
                android:minHeight="56dp" />

            <!-- Full Name -->
            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:background="@android:color/transparent"
                android:padding="14dp"
                android:minHeight="56dp"
                android:visibility="gone" />

            <!-- Student Class Dropdown -->
            <Spinner
                android:id="@+id/spinnerClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#5AA6E8"
                android:visibility="gone" />

            <!-- Student Batch Dropdown -->
            <Spinner
                android:id="@+id/spinnerBatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#5AA6E8"
                android:visibility="gone" />

            <!-- Date of Birth (Students only) -->
            <EditText
                android:id="@+id/etDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Date of Birth (yyyy-mm-dd)"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:padding="14dp"
                android:minHeight="56dp"
                android:visibility="gone" />

            <!-- Email -->
            <EditText
                android:id="@+id/etEmail"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="14dp"
                android:minHeight="56dp"
                android:layout_marginTop="8dp" />

            <!-- Password -->
            <EditText
                android:id="@+id/etPassword"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="14dp"
                android:minHeight="56dp"
                android:layout_marginTop="8dp" />

            <!-- Phone -->
            <EditText
                android:id="@+id/etPhone"
                android:hint="Phone Number"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="14dp"
                android:minHeight="56dp"
                android:layout_marginTop="8dp" />

            <!-- Glide GIF Loader -->
            <ImageView
                android:id="@+id/ivLoader"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:text="Register"
                android:textAllCaps="false"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#2E86C1"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
