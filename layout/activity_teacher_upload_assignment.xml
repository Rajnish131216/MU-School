<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f8f9fb">

    <LinearLayout
        android:id="@+id/layoutRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“š Upload Assignment"
            android:textColor="#2E86C1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/etAssignmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter assignment title"
            android:padding="12dp"
            android:backgroundTint="#2E86C1" />

        <Spinner
            android:id="@+id/spinnerClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <Spinner
            android:id="@+id/spinnerBatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etDriveLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Paste public Google Drive link (optional)"
            android:layout_marginTop="16dp"
            android:inputType="textUri"
            android:padding="12dp"
            android:backgroundTint="#2E86C1" />

        <Button
            android:id="@+id/btnSelectFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Choose PDF"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvSelectedFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â¬† Upload Assignment"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2E86C1"
            android:textColor="#fff" />
    </LinearLayout>
</ScrollView>
