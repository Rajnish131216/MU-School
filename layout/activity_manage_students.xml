<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:background="#f0f4f8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="ðŸ“‹ Manage Students"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E86C1"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etStudentName"
            android:hint="Student Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/etStudentGRNo"
            android:hint="GR Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etStudentClass"
            android:hint="Class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnAddStudent"
            android:text="Add Student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2E86C1"
            android:textColor="#FFFFFF" />

        <FrameLayout
            android:id="@+id/loaderContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AAFFFFFF"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/imageLoader"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layoutStudentsList"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
