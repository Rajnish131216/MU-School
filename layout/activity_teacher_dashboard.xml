<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient"
    android:padding="16dp"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:animateLayoutChanges="true">

        <!-- ðŸ”¹ Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_gradient"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvatar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/bg_avatar_circle_white"
                android:src="@drawable/baseline_person_24"
                android:contentDescription="Profile picture, tap to view menu"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Welcome, Teacher"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgAvatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTeacherName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name: â€”"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/tvWelcome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgAvatar" />

            <TextView
                android:id="@+id/tvTeacherDept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Department: â€”"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                app:layout_constraintTop_toBottomOf="@id/tvTeacherName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgAvatar" />

            <TextView
                android:id="@+id/tvTeacherClasses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Classes: â€”"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                app:layout_constraintTop_toBottomOf="@id/tvTeacherDept"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgAvatar"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ðŸ”¹ GridLayout (Profile + Logout removed) -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:useDefaultMargins="true"
            android:paddingBottom="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardManageStudents"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_manage_students">

                    <ImageView
                        android:src="@mipmap/students_foreground"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Manage Students"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Manage Students"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewResults"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_manage_students">

                    <ImageView
                        android:src="@drawable/results_foreground"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="View Results"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="View Results"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardUploadMaterials"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_upload_materials">

                    <ImageView
                        android:src="@drawable/baseline_folder_24"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Upload Materials"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Upload Materials"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardEnterResults"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_enter_results">

                    <ImageView
                        android:src="@drawable/baseline_bar_chart_24"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Enter Results"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Enter Results"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCreateTimetable"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_create_timetable">

                    <ImageView
                        android:src="@drawable/baseline_event_24"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Create Timetable"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Create Timetable"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPostAnnouncements"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_post_announcements">

                    <ImageView
                        android:src="@drawable/baseline_campaign_24"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Announcements"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Announcements"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardManageClasses"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_manage_classes">

                    <ImageView
                        android:src="@mipmap/sclasses_foreground"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Manage Classes"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Manage Classes"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardManageAttendance"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_manage_attendance">

                    <ImageView
                        android:src="@drawable/baseline_check_circle_24"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Manage Attendance"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Manage Attendance"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAssignments"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_assignments">

                    <ImageView
                        android:src="@drawable/baseline_assignment_24"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Assignment"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Assignment"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSettings"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_settings">

                    <ImageView
                        android:src="@drawable/setting_foreground"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Settings"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Settings"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
</ScrollView>